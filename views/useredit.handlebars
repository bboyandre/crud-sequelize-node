<section class="container">
    <div class="pt-5 pb-5">
        <h1 class="text-center">Editando: {{user.name}}</h1>
    </div>
    <form class="row g-3" action="/users/update" method="POST">
        <input type="hidden" name="id" value="{{user.id}}">
        <div class="col-12">
            <label for="inputAddress" class="form-label">Nome</label>
            <input type="text" name="name" class="form-control" id="inputAddress"
                placeholder="Digite o nome do usuário" value="{{user.name}}">
        </div>
        <div class="col-12">
            <label for="inputAddress2" class="form-label">Profissão</label>
            <input type="text" name="occupation" class="form-control" id="inputAddress2"
                placeholder="Digite a profissão" value="{{user.occupation}}">
        </div>
        <div class="form-check">
            {{#if user.newsletter }}
                <input class="form-check-input" type="checkbox" name="newsletter" id="flexCheckChecked" checked>
            {{else }}
                <input class="form-check-input" type="checkbox" name="newsletter" id="flexCheckChecked">
            {{/if }}
            <label class="form-check-label" for="flexCheckChecked">
                Enviar promoções?
            </label>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</section>

<section class="container">
    <div class="pt-5 pb-5">
        <h1 class="text-center">Endereço:</h1>
    </div>
    <form class="row g-3" action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="col-12">
            <label for="inputAddress" class="form-label">Rua</label>
            <input type="text" name="street" class="form-control" id="inputAddress" placeholder="Digite a rua">
        </div>
        <div class="col-12">
            <label for="inputAddress2" class="form-label">Número</label>
            <input type="text" name="number" class="form-control" id="inputAddress2"
                placeholder="Digite o número da residência">
        </div>
        <div class="col-12">
            <label for="inputAddress2" class="form-label">Cidade</label>
            <input type="text" name="city" class="form-control" id="inputAddress2" placeholder="Digite a cidade">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Incluir endereço</button>
        </div>
    </form>
</section>

<section class="container">
    <div class="pt-5 pb-5">
        <h2 class="text-center">Lista de endereços:</h2>
    </div>
    <div class="d-flex flex-wrap">
        {{#each user.Addresses}}
            <div class="col-12 col-lg-4 p-2">
                <div class="p-4 border rounded">
                    <p class="col-12">{{this.id }}</p>
                    <p class="col-12">{{this.street}}</p>
                    <p class="col-12">{{this.number}}</p>
                    <p class="col-12">{{this.city}}</p>
                    <form class="mt-1" action="/address/delete" method="POST">
                        <input type="hidden" name="UserId" value="{{this.UserId}}">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input class="btn btn-danger" type="submit" value="Excluir" />
                    </form>
                </div>
            </div>
        {{/each}}
    </div>
</section>